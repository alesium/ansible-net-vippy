<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle
    type="manifest"
    name="{{ net_ucarp_SmartOS_service_bundle_name }}">
    <service
	    name="{{ net_ucarp_service_name }}"
        type="service"
        version="1">
        <create_default_instance enabled='false' />
        <dependency
           name='filesystem_minimal'
           grouping='require_all'
           restart_on='none'
           type='service'>
           <service_fmri value='svc:/system/filesystem/minimal' />
       </dependency>
       <dependency
           name='loopback'
           grouping='require_any'
           restart_on='error'
           type='service'>
           <service_fmri value='svc:/network/loopback' />
       </dependency>
       <dependency
           name='network'
           grouping='optional_all'
           restart_on='error'
           type='service'>
           <service_fmri value='svc:/milestone/network' />
       </dependency>
        <exec_method
            type="method"
            name="start"
	        exec="{{ net_ucarp_SmartOS_service_svc_file }}"
            timeout_seconds="30">
        </exec_method>
        <exec_method
            type="method"
            name="stop"
	        exec=":kill"
            timeout_seconds="60">
        </exec_method>
        <property_group name='ucarp' type='application'>
         <propval name='exec' type='astring' value='{{ net_ucarp_exec_file }}' />
         <propval name='config' type='astring' value='{{ net_ucarp_config_file_dest }}' />
        </property_group>
        <stability value="Unstable" />
        <template>
            <common_name>
                <loctext xml:lang="C">ucarp</loctext>
            </common_name>
        </template>
    </service>
</service_bundle>
